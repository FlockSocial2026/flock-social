NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Comma-separated list of moderator/admin emails allowed to use /moderation
MODERATOR_EMAILS=

# Optional observability
SENTRY_DSN=

# Cron auth secret used by /api/moderation/summary-cron (via Vercel Cron)
CRON_SECRET=

# Optional: outgoing webhook URL for moderation alert delivery
# (Slack/Discord/custom endpoint that accepts JSON)
MODERATION_ALERT_WEBHOOK_URL=

# Optional: outgoing webhook payload template channel
# supported: generic | slack | discord
MODERATION_ALERT_CHANNEL=generic

# Optional: dedupe cooldown window in minutes for repeated alert signatures
MODERATION_ALERT_COOLDOWN_MINUTES=60

# Optional: cooldown in minutes for repeated church announcement pushes by same publisher
FLOCK_ANNOUNCEMENT_COOLDOWN_MINUTES=2

# Disabled by default until anti-gaming controls are complete
PRAYER_LEADERBOARD_ENABLED=false
